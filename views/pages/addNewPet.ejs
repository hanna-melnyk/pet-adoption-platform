<!-- pages/addNewPet.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
     <link rel="stylesheet" href="../../style.css" />
      <title>Document</title>
</head>
<body>
    <%- include('header') -%>
    <main class="container">
        <h1 class="new-pet">Add new pet</h1>

        <form action="/newPet" method="post" enctype="multipart/form-data" class="row g-3 needs-validation add-form" novalidate>
           <div class="col-md-6 position-relative">
            <input type="text" name="name" placeholder="write a name of the pet" class="form-control input-group-text" id="nameInput">
                
            <% if (err) { %>
                <p><%= err['name'] %></p>
              <% } %>  
        </div>
            <div class="col-md-3 position-relative add-form-select">
            <select name="species" class="form-select input-group-text" id="speciesSelect" required>
                <option selected disabled>select the type of pet</option>
                <option value="cats">cat</option>
                <option value="dogs">dog</option>
                <option value="parrots">parrot</option>
                <option value="fish">fish</option>
                <option value="insects">insect</option>
                <option value="other pets">other pet</option>
            </select>
             <select name="gender" class="form-select input-group-text" id="genderSelect" required>
                <option selected disabled>select the gender of pet</option> 
                <option value="male">male</option>
                <option value="female">female</option>
                <option value="unknown">unknown</option>
            </select>
            </div>
           <div class="col-md-6 position-relative">
             <input type="text" name="breed" placeholder="write a breed of the pet" class="form-control input-group-text">
            </div>
            <div class="col-md-6 position-relative">
               <input type="text" name="age" placeholder="write an age of the pet" class="form-control input-group-text" id="ageInput" required>

               <% if (err) { %>
                <p><%= err['age'] %></p>
              <% } %>
               
            </div>
            <div class="col-md-6 position-relative">
                <input type="text" name="color" placeholder="write a color of the pet" class="form-control input-group-text">
            </div>
             
            <div class="col-md-6 position-relative">
                <input type="text" name="description" placeholder="write a description of the pet" class="form-control input-group-text">
            </div>
            <div class="col-md-6 position-relative">
                <input type="file" name="photos" class="form-control input-group-text">
            </div>
            
           <div class="col-md-3 position-relative add-form-adoption">
                <select name="adoptionStatus" class="form-select input-group-text " id="adoptionStatus" required>
                <option selected disabled>select the adoption status of pet</option> 
                <option value="available">available</option>
                <option value="pending">pending</option>
                <option value="adopted">adopted</option>
            </select>
           </div>
             
            <button class="search-btn">Submit</button>
        </form>
    </main>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>