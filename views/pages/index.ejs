<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../../style.css" />
    <title>Home page</title>
  </head>
  <body>
     <%- include('header') -%>
    <main class="container">

      <!-- =============== Filter ========================= -->
      <section class="filter">
        <!-- <h1>Search for a pet</h1> -->
        <form action="/" method="get" class="search-form">
            <input type="text" name="search" placeholder="Search for a pet" class="input-group-text"/>
            <button type="submit" class="search-btn">Search</button>
        </form>
      </section>

      <!--======================== Cards ====================== -->
      <section class="cards">
        <ul class="cards-list">
          <% for (let i = 0; i < pets.length; i++) {%>
          <li class="">
            <% if (pets[i].photos && pets[i].photos.length > 0) { %>
            <img
                src="/uploads/<%= pets[i].photos[0].split('\\').pop() %>"
                alt="pet image"
                style="width: 250px;"
                class="card-img-top"
            />
        <% } else { %>
            <img
                src="../../images/Pets&children.png"
                alt="pet image"
                style="width: 250px;"
                class="card-img-top"
            />
              <% } %>
           
            <div class="card-body">
              <div class="card-list-li">
              <h3 class="card-title"><%= pets[i].name %></h3>
             
              <p class="value"><%= pets[i].age %></p>     
              
              </div>
              <div class="card-list-li">
                 <div class="card-list-btn">
                    <p class="value"><%= pets[i].breed %></p>
                    <p class="property">breed</p>
                  </div>
                 <div class="card-list-btn">
                    <p class="value"><%= pets[i].species %></p>
                    <p class="property">species</p>
                 </div>
                 
                  <div class="card-list-btn">
                    <p class="value"><%= pets[i].gender %></p>
                    <p class="property">gender</p>
                  </div>
                   <!-- <div class="card-list-btn">
                    <p class="value"><%= pets[i].color %></p>
                    <p class="property">color</p>
                   </div> -->
              </div>
              <div class="description">
                <!-- <p class="value">About</p> -->
               <!-- <p class="card-text" class="property"><%= pets[i].description.slice(0, 70) + '...' %></p> -->
              </div>
               
              <div class="card-list-li-bottom">
                <div class="card-list-bottom">
                  <p class="value"><%= pets[i].adoptionStatus %></p>
                  <!-- <p class="property">adoption status</p> -->
                </div>
                <div class="card-list-bottom">
                  <p class="value">price</p>
                  
                </div>
              </div>
              <div class="see-more">
                <a href="/fullPetCards/<%= pets[i]._id %>" >see more...</a>
              </div>
              
            </div>
          </li>
          <% } %>
        </ul>
      </section>
    </main>
  </body>
</html>
