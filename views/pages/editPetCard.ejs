<!-- pages/editPetCard -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="../../style.css" />
    <title>Edit pet card</title>
</head>
<body>
<%- include('header') -%>
<div class="container">
    <a href="/">Home</a>
    <h1>Update pet card</h1>
    <form action="/updatePetCard/<%= pet._id %>" method="post" enctype="multipart/form-data">
        <div>
            <h3>Current Photos:</h3>
            <% if (pet.photos && pet.photos.length > 0) { %>
                <% pet.photos.forEach(function(photo, index) { %>
                    <div class="current-photo">
                        <img src="/uploads/<%= photo.split('\\').pop() %>" alt="Pet photo <%= index + 1 %>" style="width: 100px; height: auto;">
                        <!-- Hidden input to keep the existing photo on record if not changed -->
                        <input type="hidden" name="existingPhotos" value="<%= photo %>">
                    </div>
                <% }); %>
            <% } else { %>
                <p>No current photos.</p>
            <% } %>
        </div>

        <div class="form-group">
            <label for="photos">Upload New Photos:</label>
            <input type="file" name="photos" multiple>
        </div>

        <input type="text" name="name" value="<%= pet.name %>">
        <input type="text" name="species" value="<%= pet.species %>">
        <input type="text" name="breed" value="<%= pet.breed %>">
        <input type="text" name="age" value="<%= pet.age %>">
        <input type="text" name="color" value="<%= pet.color %>">
        <input type="text" name="gender" value="<%= pet.gender %>">
        <input type="text" name="description" value="<%= pet.description %>">
        <input type="text" name="adoptionStatus" value="<%= pet.adoptionStatus %>">

        <button type="submit" class="btn">Submit</button>
    </form>
</div>
</body>
</html>
