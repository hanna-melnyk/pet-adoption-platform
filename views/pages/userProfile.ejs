<!-- views/pages/userProfile -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Add your CSS file link here -->
</head>
<body>
<div class="profile-container">
    <img src="<%= user.userPhoto || 'path/to/default/image' %>" alt="User photo" class="profile-photo">
    <h1><%= user.name %></h1>
    <h2>@<%= user.username %></h2>
    <p>Roles:</p>
    <ul>
        <% user.roles.forEach(function(role) { %>
            <li><%= role %></li>
        <% }); %>
    </ul>
    <!-- User posts will be inserted here -->
    <div class="posts">
        <% if (user.posts && user.posts.length) { %>
            <% user.posts.forEach(function(post) { %>
                <div class="post">
                    <!-- Construct post element content -->
                </div>
            <% }); %>
        <% } else { %>
            <p>No posts to display.</p>
        <% } %>
    </div>
    <a href="/edit-profile" class="edit-profile-button">Edit Profile</a>
</div>

<script src="/js/profile.js"></script>
</body>
</html>
