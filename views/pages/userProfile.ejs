<!-- views/pages/userProfile -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Add your CSS file link here -->
</head>
<body>
<div class="profile-container">
    <img src="<%= user.userPhoto || 'path/to/default/image' %>" alt="User photo" class="profile-photo">
    <h1><%= user.name %></h1>
    <h2>@<%= user.username %></h2>
    <p>Roles:</p>
    <ul>
        <% user.roles.forEach(function(role) { %>
            <li><%= role %></li>
        <% }); %>
    </ul>
    <!-- User petPosts will be inserted here -->
    <div class="posts">
        <% if (user.petPosts && user.petPosts.length) { %>
            <% user.petPosts.forEach(function(post) { %>
                <div class="post">
                    <h3><%= post.name %></h3>
                    <p>Species: <%= post.species %></p>
                    <p>Age: <%= post.age %></p>
                    <!-- Add more details as needed -->
                </div>
            <% }); %>
        <% } else { %>
            <p>No pet posts to display.</p>
        <% } %>
    </div>
    <a href="/userEdit" class="edit-profile-button">Edit Profile</a>
</div>

</body>
</html>
